<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">@dimen/text_heading_2x</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_heading_1x</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_regular_3x</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">

    </style>

    <style name="TextAppearance.App.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_regular_2x_18</item>
    </style>

    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextAppearance.App.Tab" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/text_regular_2x</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheet</item>
    </style>

    <style name="AppBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:padding">@dimen/margin_medium_2</item>
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="ChipStyle">
        <item name="chipIcon">@drawable/ic_check_white_24dp</item>
        <item name="chipMinTouchTargetSize">@dimen/margin_xxxxlarge</item>
        <item name="chipCornerRadius">@dimen/margin_medium</item>
        <item name="chipMinHeight">@dimen/min_height_chip</item>
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:checkable">true</item>
    </style>

</resources>